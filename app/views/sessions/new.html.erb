<div class="main-container">
  <div class="auth-container">
    <%= form_tag(sessions_path, method: :post) do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log In" %>
    <% end %>
  </div>
</div>