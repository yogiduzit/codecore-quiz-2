<div class="main-container">
  <div class="form-errors-container">
    <% if @idea.errors.any? %>
      <ul class="form-errors text-danger">
        <% @idea.errors.full_messages.each do |err| %>
          <li class="form-error"><%= err %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="form-container">
    <%= form_with model: @idea, local: true do |f| %>
      <div id="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div id="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>