<!DOCTYPE html>
<html>
  <head>
    <title>CodecoreQuiz2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">IdeaDeck</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/ideas/new">New</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ideas">Ideas</a>
          </li>
        </ul>
        <div class="welcome-container">
          <% if current_user.present? %>
            <h6 class="name-heading">Hello <%= current_user.first_name %> !</h6>
          <% end %>
        </div>
        <ul class="navbar-nav">
          <% if current_user.present? %>
            <li class="nav-item">
              <%= link_to "Sign Out", sessions_path, method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_sessions_path %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
